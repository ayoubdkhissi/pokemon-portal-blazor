<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item" @onclick="OnPreviousPage">
            <div class="page-link" href="#" aria-label="Previous" role='button'>
                <span aria-hidden="true">&laquo;</span>
            </div>
        </li>
       
        @for(int i=1; i<= TotalPages; i++)
        {
			var pageNumber = i;
            <li class="page-item @(i == CurrentPage ? "active" : string.Empty)" @onclick="() => GoToPage(pageNumber)" role='button'>
                <div class="page-link" href="#">@i</div>
            </li>
        }

        <li class="page-item" @onclick="OnNextPage">
            <div class="page-link" aria-label="Next" role='button'>
                <span aria-hidden="true">&raquo;</span>
            </div>
        </li>
    </ul>
</nav>