<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        <li class="page-item" @onclick="OnPreviousPage">
            <div class="page-link pagination-box @(CurrentPage == 1 ? "disabled bg-disabled" : string.Empty)" href="#" aria-label="Previous" role='button'>
                <span aria-hidden="true">&laquo;</span>
            </div>
        </li>


        @foreach (var pageNumber in GetPageNumbers())
        {
            if (pageNumber == null)
            {
                <li class="page-item disabled">
                    <div class="page-link pagination-box">...</div>
                </li>
            }
            else
            {
                <li class="page-item @(pageNumber == CurrentPage ? "active" : string.Empty)" @onclick="() => GoToPageAsync(pageNumber.Value)" role="button">
                    <div class="page-link pagination-box">@pageNumber</div>
                </li>
            }
        }

        <li class="page-item" @onclick="OnNextPage">
            <div class="page-link pagination-box @(CurrentPage == TotalPages ? "disabled bg-disabled" : string.Empty)" aria-label="Next" role='button'>
                <span aria-hidden="true">&raquo;</span>
            </div>
        </li>
    </ul>
</nav> 