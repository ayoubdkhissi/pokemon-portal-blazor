@page "/statistics"
@using pokemon_portal_blazor.Components
@using pokemon_portal_blazor.Components.ChartCards

<PageTitle>Pokemon - Statistics</PageTitle>

<NavBar />

@if (StatisticsModel == null)
{
    <div class="d-flex justify-content-center my-4">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row mx-0">
            <div class="col-md-3">
                <div class="chart-title">Top Pokémon by Catch Count</div>
                <CatchCountCard Data="StatisticsModel?.CatchCountCardData" />
            </div>

            <div class="col-md-3">
                <CatchCountByPower Data="StatisticsModel?.CatchCountByPower"/>
            </div>

            

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="chart-title">Averages by Power</div>
                <AveragesByPower Data="StatisticsModel?.AveragesByPower"/>
            </div>
        </div>
    </div>
}
